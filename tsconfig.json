{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false, // Set to false to avoid errors on unused function args like `next`
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true, // This is critical for libraries like Express
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  // This is the key part for your tests.
  // It tells TypeScript to apply these rules to all .ts files in the src directory,
  // which makes the Jest types from @types/jest globally available in your test files.
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "client"] // Exclude node_modules and the client folder
}