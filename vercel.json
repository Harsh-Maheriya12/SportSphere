{
  "version": 2,
  "installCommand": "npm install --prefix client",
  "buildCommand": "npm run build --prefix client",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
