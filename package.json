{
  "name": "sportsphere-backend",
  "version": "1.0.0",
  "description": "The backend for the SportSphere application",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev:server": "ts-node-dev --respawn --transpile-only -r dotenv/config src/server.ts",
    "dev:client": "npm run dev --prefix client",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build": "tsc",
    "test": "jest --detectOpenHandles --runInBand"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^7.0.3",
    "@types/semver": "^7.7.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "pino-pretty": "^13.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
